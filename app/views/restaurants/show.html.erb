<h1>
  <%= @restaurant.name %>
  (<%= @restaurant.category %>)

</h1>
<h5>
  <%= @restaurant.address %>
  <%= @restaurant.phone_number %>
</h5>
<% @restaurant.reviews.each do |review| %>
<p>
  <%= '⭐️' * review.rating %>
</p>
<% end %>

<%= link_to 'Back to Restaurants', root_path %>
<p><%= link_to 'Write a review', new_restaurant_review_path(@restaurant) %></p>



